<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/bg_home" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="@string/android_studio"
            android:textColor="@color/white"
            android:textSize="@dimen/text_custom_size_48" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="@string/choose_category"
            android:textColor="@color/grey_300"
            android:textSize="@dimen/text_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="@dimen/margin_medium"
                    android:background="@drawable/btn_bg_category"
                    android:drawableTop="@drawable/ic_mail_48"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:src="@drawable/ic_mail_48"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="@string/messages"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />
            </FrameLayout>


            <TextView
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_margin="@dimen/margin_medium"
                android:background="@drawable/btn_bg_category"
                android:drawableTop="@drawable/ic_message_56"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingTop="@dimen/padding_large"
                android:text="Message"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:text="Next"
            android:textColor="@color/grey_300"
            android:textSize="@dimen/text_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dog"
                    android:elevation="2dp"
                    android:layout_gravity="end|top"
                    android:outlineProvider="none"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="300dp"
                    android:layout_margin="@dimen/margin_medium"
                    android:backgroundTint="@color/blue_700"
                    app:cardCornerRadius="@dimen/margin_medium_plus"
                    app:cardElevation="@dimen/default_elevation">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:numStars="4" />
                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
